<% provide(:title, "All users") %>
<h1>All users</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= image_tag "profile1.jpg" %>
      <%= link_to user.name, user %>
      <!-- delete link will display only if the current user is an admin -->
      <% if current_user.admin? && !current_user?(user) %> | <%= link_to "delete", user, method: :delete, data: { confirm: "Are you sure you want to delete?" } %>
      <% end %>
  <% end %>
</ul>
